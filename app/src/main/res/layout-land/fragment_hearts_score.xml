<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:orientation="vertical"
              tools:context=".PlayerScoreActivityFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/score_width_land"
        android:layout_height="wrap_content"
        android:id="@+id/player_2_layout"
        android:layout_below="@+id/player_3_layout"
        android:layout_toRightOf="@+id/player_3_layout"
        android:layout_toEndOf="@+id/player_3_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/player_2_score"
            android:textSize="@dimen/score_text_size"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chris"
            android:id="@+id/player_2_name"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/score_width_land"
        android:layout_height="wrap_content"
        android:id="@+id/player_1_layout"
        android:layout_below="@+id/player_4_layout"
        android:layout_toRightOf="@+id/player_4_layout"
        android:layout_toEndOf="@+id/player_4_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:id="@+id/player_1_score"
            android:textSize="@dimen/score_text_size"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manu"
            android:id="@+id/player_1_name"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/score_width_land"
        android:layout_height="wrap_content"
        android:id="@+id/player_4_layout"
        android:layout_alignTop="@+id/player_2_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:id="@+id/player_4_score"
            android:textSize="@dimen/score_text_size"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mario"
            android:id="@+id/player_4_name"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/score_width_land"
        android:layout_height="wrap_content"
        android:id="@+id/player_3_layout"
        android:layout_alignTop="@+id/score_left"
        android:layout_toRightOf="@+id/player_4_layout"
        android:layout_toEndOf="@+id/player_4_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-2"
            android:id="@+id/player_3_score"
            android:textSize="@dimen/score_text_size"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abby"
            android:id="@+id/player_3_name"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"/>
    </LinearLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="@dimen/name_width_land"
        android:layout_height="wrap_content"
        android:id="@+id/player_1_bid"
        android:layout_alignTop="@+id/player_3_layout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="@dimen/score_bid_name_width"
            android:layout_height="wrap_content"
            android:text="Manu"
            android:id="@+id/player_1_bid_name"
            android:textSize="@dimen/score_bid_name_text_size"
            android:layout_marginTop="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <EditText
            android:layout_width="@dimen/score_bid_number_width"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="@dimen/name_width_land"
        android:layout_height="wrap_content"
        android:id="@+id/player_2_bid"
        android:layout_below="@+id/player_1_bid"
        android:layout_alignParentRight="true">

        <TextView
            android:layout_width="@dimen/score_bid_name_width"
            android:layout_height="wrap_content"
            android:text="Chris"
            android:id="@+id/player_2_bid_name"
            android:textSize="@dimen/score_bid_name_text_size"
            android:layout_marginTop="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <EditText
            android:layout_width="@dimen/score_bid_number_width"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="@dimen/name_width_land"
        android:layout_height="wrap_content"
        android:id="@+id/player_3_bid"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/player_2_bid"
        android:layout_alignParentRight="true">

        <TextView
            android:layout_width="@dimen/score_bid_name_width"
            android:layout_height="wrap_content"
            android:text="Abby"
            android:id="@+id/player_3_bid_name"
            android:textSize="@dimen/score_bid_name_text_size"
            android:layout_marginTop="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <EditText
            android:layout_width="@dimen/score_bid_number_width"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText3"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="@dimen/name_width_land"
        android:layout_height="wrap_content"
        android:id="@+id/player_4_bid"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/player_3_bid"
        android:layout_alignParentRight="true">

        <TextView
            android:layout_width="@dimen/score_bid_name_width"
            android:layout_height="wrap_content"
            android:text="Mario"
            android:id="@+id/player_4_bid_name"
            android:textSize="@dimen/score_bid_name_text_size"
            android:layout_marginTop="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <EditText
            android:layout_width="@dimen/score_bid_number_width"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText4"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Next"
        android:id="@+id/nextButton"
        android:textSize="12sp"
        android:layout_alignBottom="@+id/player_1_layout"
        android:layout_alignRight="@+id/player_2_layout"
        android:layout_alignEnd="@+id/player_2_layout"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left: 36"
        android:id="@+id/score_left"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>